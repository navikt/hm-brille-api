<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <appender name="auditLoggerAppender" class="ch.qos.logback.classic.net.SyslogAppender">
        <syslogHost>audit.nais</syslogHost>
        <port>6514</port>
        <facility>AUDIT</facility>
    </appender>

    <appender name="secureLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/secure-logs/secure.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/secure-logs/secure.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>1</maxIndex>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>50MB</maxFileSize>
        </triggeringPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder" />
    </appender>

    <logger name="tjenestekall" level="DEBUG" additivity="false">
        <appender-ref ref="secureLog" />
    </logger>

    <logger level="DEBUG" name="auditLogger" additivity="false">
        <appender-ref ref="auditLoggerAppender" />
    </logger>

    <logger name="no.nav.hjelpemidler.brille.medlemskap" level="DEBUG" />

    <logger name="no.nav.hjelpemidler.brille.syfohelsenettproxy" level="DEBUG" />

    <logger level="DEBUG" name="no.nav.hjelpemidler.http.openid" />

    <root level="INFO">
        <appender-ref ref="STDOUT_JSON" />
    </root>
</configuration>
